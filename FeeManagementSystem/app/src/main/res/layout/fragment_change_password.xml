<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentChangePassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your new password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:hint="Enter New Password"
        android:layout_marginTop="10dp"
        android:id="@+id/edtNewPassword"
        tools:ignore="Autofill,HardcodedText" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:hint="Enter Confirm Password"
            android:layout_marginTop="10dp"
            android:id="@+id/edtConfirmPassword"
            tools:ignore="Autofill,HardcodedText" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Change Password"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:id="@+id/btnChangePassword"
            tools:ignore="HardcodedText" />

        <TextView
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Registered Mobile Number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <TextView
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Old Number"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:enabled="false"
            android:hint="Enter Old Mobile Number"
            android:id="@+id/edtOldNumber"
            tools:ignore="Autofill,HardcodedText,TextFields" />
        <TextView
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Number"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:hint="Enter New Mobile Number"
            android:id="@+id/edtNewNumber"
            tools:ignore="Autofill,HardcodedText,TextFields" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Change Mobile Number"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:id="@+id/btnChangeMobile"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</ScrollView>